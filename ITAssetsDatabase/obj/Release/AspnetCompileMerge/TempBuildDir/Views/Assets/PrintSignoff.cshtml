        width: 200px;



    }*/

    div {
        margin-bottom: 15px;
    }

    input, .upload {
        width: 190px;
        height: 25px;
    }
</style>




@using (Html.BeginForm("PrintSignoff_display", "Assets", FormMethod.Post, new { id = "thisForm", target = "_blank" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Print Sign off sheet</legend>

        @Html.HiddenFor(model => model.AssetId)


        <div id="right">
            <div>
                Which users sign off sheet do you want to print?
                @Html.DropDownList("Enduser", Model.Endusers)
            </div>
        </div>


 
        <p>
            <input id="Print" type="Submit" value="Print" />
        </p>
    </fieldset>
}


<script>


            $("#upload").click(function (e) {


                e.preventDefault();

                var endusername = $('#Enduser option:selected').text();
                $('#Name').val(endusername);

                //alert($('#Name').val());
                //alert($('#Enduser').val());

                $("#thisForm").submit();
         });

</script>

