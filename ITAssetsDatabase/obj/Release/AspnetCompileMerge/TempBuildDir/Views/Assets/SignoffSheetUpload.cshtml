@*@using (Html.BeginForm("SignOffSheetsUpload", "Assets"))*@
@using (Html.BeginForm("SignOffSheetsUpload", "Assets", FormMethod.Post, new { enctype = "multipart/form-data", id = "thisForm" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SignoffSheetUploadViewModel</legend>

        @Html.HiddenFor(model => model.AssetId)


        <div id="right">
            <div>
                Upload sheet for:-
                @Html.DropDownList("Enduser", Model.Endusers)
            </div>
        </div>
        
        
        <div id="left">
            <div>      
                Browse to sheet:-          
                <input class="upload" type="file" name="fileupload_object" id="file1" />
                @Html.HiddenFor(model => model.Name)
            </div> 
        </div>
                

        <p>
            <input id="upload" type="Submit"  value="Upload" />
        </p>
    </fieldset>
}


    <script>
           

            $("#upload").click(function (e) {

                
                e.preventDefault();

                var endusername = $('#Enduser option:selected').text();
                $('#Name').val(endusername);

                //alert($('#Name').val());
                //alert($('#Enduser').val());
                
                $("#thisForm").submit();             
         });

    </script>

