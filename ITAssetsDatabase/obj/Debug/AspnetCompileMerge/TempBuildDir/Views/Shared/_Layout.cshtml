
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Equiniti IT Assets Database</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Images/Equinit_logo.jpg" />
                    <p class="site-title">@Html.ActionLink("IT Assets Database", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">                       
                        <span class="username"> @{Html.RenderAction("LoggedIn","LoggedIn");}</span>
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Team", "Team", "Home")</li>
                            <li>@Html.ActionLink("Upload", "Upload", "Upload")</li>
                            <li>@Html.ActionLink("Fetch", "Add", "AddHostname")</li>
                        </ul>
                    </nav>
                </div>
            </div>
          </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - IT Assets Database</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
